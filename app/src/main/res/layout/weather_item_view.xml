<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:animateLayoutChanges="true"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/weather_itemview_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignBottom="@+id/weather_title_tv"
            android:layout_alignStart="@+id/poem_title"
            android:layout_marginBottom="17dp"
            android:layout_marginStart="46dp"
            tools:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/weather_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/poem_title"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:layout_marginEnd="78dp"
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            tools:text="Sunny \n 75 \n 60" />


        <TextView
            android:id="@+id/poem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            tools:text="There is a poem here and there are some words and stuff" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:animateLayoutChanges="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="6dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/weather_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorFontDefault"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/weather_tv"
            app:layout_constraintStart_toEndOf="@+id/weather_itemview_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Monday" />

        <ImageView
            android:id="@+id/weather_itemview_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_below="@id/weather_date_tv"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/weather_date_tv"
            android:src="@android:drawable/btn_star"
            app:layout_constraintBottom_toTopOf="@+id/poem_title_tv"
            app:layout_constraintEnd_toStartOf="@+id/poem_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_date_tv" />

        <TextView
            android:id="@+id/weather_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_date_tv"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/weather_date_tv"
            android:textAlignment="center"
            android:textColor="@color/colorFontDefault"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/poem_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/poem_title_tv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sunny \n 75 \n 60" />


        <TextView
            android:id="@+id/poem_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weather_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorFontDefault"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="162dp"
            tools:text="Poem Title" />

        <ImageView
            android:id="@+id/toggle_iv"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:layout_below="@+id/poem_lines_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ellipses"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poem_lines_tv" />

        <TextView
            android:id="@+id/poem_lines_tv"
            android:layout_width="19dp"
            android:layout_height="25dp"
            android:layout_below="@+id/poem_title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorFontDefault"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poem_title_tv"
            tools:text="Entire poem here" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
